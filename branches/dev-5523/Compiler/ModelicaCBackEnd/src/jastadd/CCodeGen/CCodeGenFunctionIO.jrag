    public void FIdUseExp.genTempInputCellAssignsMemcpy_C(CodeStream str, String indent, String name, int n) {
        str.print(indent);
        str.print("memcpy(&");
        str.print(name);
        str.print(", &");
        genAssignedRef_C(ASTNode.printer_C, str, indent);
        str.print(", ");
        str.print(n);
        str.print(" * sizeof(");
        str.print(type().memcpyObject());
        str.print("));\n");
    }
    
    syn String FType.memcpyObject() {
        throw new InternalCompilerError("FType.memcpyObject() is not implemented for " + getClass().getSimpleName());
    }
    eq FPrimitiveType.memcpyObject() = "jmi_real_t";
    eq FExternalObjectType.memcpyObject() = "jmi_extobj_t";
    
    /**
     * Helper interface for ASTNodes which handles writebacks to multiple
     * variables even after scalarization.
     */
    public interface FCompositeWriteBackNode {
        public FExp getFExp();
        public String writeBackName_C();
    }
    
    FFunctionCallLeft implements FCompositeWriteBackNode;
    FSubscriptedExp implements FCompositeWriteBackNode;
    
    @Override
    public String FFunctionCallLeft.writeBackName_C() {
        return name_C();
    }
    @Override
    public String FSubscriptedExp.writeBackName_C() {
        return getFExp().tempName_C();
    }
    
    public void FIdUseExp.genWriteBackAssignment_C(CodePrinter p, CodeStream str, String indent, String name,
            Collection<FVariable> forVariables) {
        if (forVariables != null && !forVariables.contains(myFV()))
            return; // This variable is not in the set of variables to generate code for.
        if (type().isString()) {
            str.print(indent);
            str.print("JMI_ASG(STR");
            if (!inFunction()) {
                str.print("_Z");
            }
            str.print(", ");
            genAssignedRef_C(p, str, indent);
            str.print(", ");
            str.print(name);
            str.println(")");
            return;
        }
        str.print(indent);
        genAssignedRef_C(p, str, indent);
        str.print(" = (");
        str.print(name);
        str.print(")");
        if (myFV().isReal() && myOptions().getBooleanOption("enable_variable_scaling") && !inFunction()) {
            str.print("/sf(");
            str.print(myFV().valueReference());
            str.print(")");
        }
        str.print(";\n");
    }
    
    public void FIdUseExp.genArrayWriteBackAssignment_C(CodePrinter p, CodeStream str, String indent, String name, int n) {
        str.print(indent);
        str.print("memcpy(&");
        genAssignedRef_C(p, str, indent);
        str.print(", &");
        str.print(name);
        str.print(", ");
        str.print(n);
        str.print(" * sizeof(jmi_real_t));\n");
    }
    
    public void FAbstractVariable.genWriteBackAssignment(CodePrinter.ExecuteCodePrinter p, CodeStream str, String indent, ASTNode ctx, String name,
            Collection<FVariable> forVariables) {
        if (forVariables != null && !forVariables.contains(this))
            return; // This variable is not in the set of variables to generate code for.
        if (type().isString()) {
            str.print(indent);
            str.print("JMI_ASG(STR");
            if (!ctx.inFunction()) {
                str.print("_Z");
            }
            str.print(", ");
            str.print(p.name(this));
            str.print(", ");
            str.print(name);
            str.println(")");
            return;
        }
        str.print(indent);
        str.print(p.name(this));
        str.print(" = (");
        str.print(name);
        str.print(")");
        if (isReal() && myOptions().getBooleanOption("enable_variable_scaling") && !ctx.inFunction()) {
            str.print("/sf(");
            str.print(valueReference());
            str.print(")");
        }
        str.print(";\n");
    }
