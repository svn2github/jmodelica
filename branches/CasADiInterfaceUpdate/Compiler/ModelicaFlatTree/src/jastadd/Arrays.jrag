		Array x = getX().getArray();
		Array y = getY().getArray();
		for (Index i : res.indices()) {
			int j = i.first() % 3 + 1;
			int k = j % 3 + 1;
			FExp m1 = new FMulExp(x.get(j).fullCopy(), y.get(k).fullCopy());
			FExp m2 = new FMulExp(x.get(k).fullCopy(), y.get(j).fullCopy());
			res.set(i, new FSubExp(m1, m2));
