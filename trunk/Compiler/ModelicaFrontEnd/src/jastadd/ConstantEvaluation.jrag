    protected CValue InstRecord.cevalBindingExp() {
        if (hasBindingFExp())
            return myBindingInstExp().ceval();
        FRecordType type = (FRecordType) type().scalarType();
        if (isArray()) {
            CValueArray res = new CValueArray(size());
            int ndims = ndims();
            for (InstComponentDecl ch : getInstComponentDecls())
                ch.cevalBindingExpForRecordArray(type, res, ndims);
            return res;
        } else {
            return cevalBindingExpForRecord(type);
        }
    }

