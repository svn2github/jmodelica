    protected void InstArrayComponentDecl.cevalBindingExpForRecordArray(FRecordType type, CValueArray arr, int ndims) {
        ndims--;
        if (ndims > 0) {
            for (InstComponentDecl ch : getInstComponentDecls())
                ch.cevalBindingExpForRecordArray(type, arr, ndims);
        } else {
            arr.addCell(cevalBindingExpForRecord(type));
        }
    }

    protected CValue InstComponentDecl.cevalBindingExpForRecord(FRecordType type) {
        CValueRecord res = new CValueRecord(type);
        evaluationValue = res;
        for (InstComponentDecl ch : allInstComponentDecls())
            res.setMember(ch.name(), ch.cevalBindingExp());
        return res;
    }

