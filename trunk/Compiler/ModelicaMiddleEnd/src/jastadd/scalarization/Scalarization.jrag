    public void FIfEquation.scalarize(List<FAbstractEquation> eqns, 
            List<FVariable> vars, Map<String,FExp> indexMap) {
        boolean lockedBranch = false;
        if (getTest().variability().indexParameterOrLess()) {
            try {
                if (getTest().ceval().booleanValue()) {
                    scalarizeList(getFAbstractEquations(), eqns, vars, indexMap);
                } else {
                    getElse().scalarize(eqns, vars, indexMap);
                }
                lockedBranch = true;
            } catch (ConstantEvaluationException e) {}
        }
        if (!lockedBranch) {
            super.scalarize(eqns, vars, indexMap);
        }
    }

