		if (left.inferType().isRecord()) 
			left.inferType().scalarRecordClauses(eqns, true, new FQNameEmpty(), indexMap, left, right);
		else
			eqns.add(new FEquation(attrs, left.scalarize(indexMap), right.scalarize(indexMap)));
	}
	
