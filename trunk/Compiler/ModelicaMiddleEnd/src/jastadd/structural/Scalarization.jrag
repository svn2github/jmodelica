                        if (!ls.equals(rs)) {
                            res.add(new FAssert(orNotIfExpConds(new FEqExp(le.unboundCopy(), re)), 
                                    new FStringLitExp(
                                            String.format("Mismatching size in dimension %d of expression %s in function %s", i+1, prettyPrint(""), containingFFunctionDecl().name())), new Opt<FExp>()));
                        }
                    }
                }
            }
        }
        return res;
